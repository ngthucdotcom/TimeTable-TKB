# Rewrite url
RewriteEngine on
# 1 tham số
RewriteRule ^([a-zA-Z0-9_-]+)$ index.php?app=$1
RewriteRule ^([a-zA-Z0-9_-]+)/$ index.php?app=$1
# 2 tham số
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)$ index.php?app=$1&action=$2
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/$ index.php?app=$1&action=$2
# 3 tham số
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)$ index.php?app=$1&action=$2&id=$3
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/$ index.php?app=$1&action=$2&id=$3
# 4 tham số
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)$ index.php?app=$1&action=$2&id=$3&value=$4
RewriteRule ^([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/([a-zA-Z0-9_-]+)/$ index.php?app=$1&action=$2&id=$3&value=$4
